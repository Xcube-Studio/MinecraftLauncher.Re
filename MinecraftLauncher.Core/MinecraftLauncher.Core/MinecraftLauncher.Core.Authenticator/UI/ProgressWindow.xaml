<Window x:Class="MinecraftLauncher.Core.Authenticator.UI.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftLauncher.Core.Authenticator.UI"
        ResizeMode="CanMinimize"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MinecraftLauncher.Core.Authenticator" 
        Height="130" Width="400">
    <Grid>
        <TextBlock  Text="Authenticating Minecraft Account..." VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15,0,0,67"/>
        <ProgressBar x:Name="progress" Height="14" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="15,0,15,48" IsIndeterminate="True"/>
        <Button x:Name="button" Content="Cancel" Width="73" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,15,14" BorderBrush="#FFBCBCBC" Click="button_Click"/>
        <TextBlock x:Name="info" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Getting authorization code..." Margin="15,0,0,27"/>
    </Grid>
</Window>
